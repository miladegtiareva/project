<%provide :page_title, 'Вопросы'%>
<% currently_at 'A&Q'%>
<div class="container mt-4">
  <h1>Вопросы</h1>
  <ul class="list-group">
  <div class="search-form-container">
  <%= form_with(url: questions_path, method: :get, class: 'form-inline search-form') do |form| %>
    <div class="input-group">
      <%= form.text_field :query, class: 'form-control search-input', placeholder: 'Поиск вопросов...' %>
      <div class="input-group-append">
        <%= form.submit 'Искать', class: 'btn btn-primary search-button' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'Назад', root_path, class: 'btn btn-secondary back-button' %>
</div>
    <% @questions.each do |question| %>
      <li class="list-group-item">
      <h2>
        <%= question.title %>
        </h2>
        <div class="btn-group" role="group" aria-label="Question Actions">
        <div>
          <%= link_to 'Просмотр', question, class: 'btn btn-primary' %>
          <%= link_to 'Изменить', edit_question_path(question), class: 'btn btn-warning' %>
          <%= link_to 'Удалить', question, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-danger' %>
        </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= will_paginate @questions%>
  <div class="mt-3">
    <%= link_to 'Новый вопрос', new_question_path, class: 'btn btn-success' %>
  </div>
</div>
